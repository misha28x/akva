{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@akva/crm/assets": ["libs/crm/assets/src/index.ts"],
      "@akva/shared/typography": ["libs/shared/typography/src/index.ts"],
      "@akva/crm/layout": ["libs/crm/layout/src/index.ts"],
      "@akva/shared/menu": ["libs/shared/menu/src/index.ts"],
      "@akva/crm/consts": ["libs/crm/consts/src/index.ts"],
      "@akva/shared/ui-icon": ["libs/shared/ui-icon/src/index.ts"],
      "@akva/crm/auth": ["libs/crm/auth/src/index.ts"],
      "@akva/crm/config": ["libs/crm/config/src/index.ts"],
      "@akva/shared/environments": ["libs/shared/environments/src/index.ts"],
      "@akva/shared/config": ["libs/shared/config/src/index.ts"],
      "@akva/shared/auth-models": ["libs/shared/auth-models/src/index.ts"],
      "@akva/shared/mocks": ["libs/shared/mocks/src/index.ts"],
      "@akva/crm/routes": ["libs/crm/routes/src/index.ts"],
      "@akva/shared/response": ["libs/shared/response/src/index.ts"],
      "@akva/crm/task-planning": ["libs/crm/task-planning/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
