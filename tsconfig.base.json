{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@akva/crm/assets": ["libs/crm/assets/src/index.ts"],
      "@akva/shared/typography": ["libs/shared/typography/src/index.ts"],
      "@akva/shared/menu": ["libs/shared/menu/src/index.ts"],
      "@akva/crm/consts": ["libs/crm/consts/src/index.ts"],
      "@akva/crm/routes": ["libs/crm/routes/src/index.ts"],
      "@akva/crm/task-planning": ["libs/crm/task-planning/src/index.ts"],
      "@akva/crm/auth/data-access": ["libs/crm/auth/data-access/src/index.ts"],
      "@akva/crm/auth/ui": ["libs/crm/auth/ui/src/index.ts"],
      "@akva/crm/auth/feature-shell": [
        "libs/crm/auth/feature-shell/src/index.ts"
      ],
      "@akva/crm/mocks": ["libs/crm/mocks/src/index.ts"],
      "@akva/crm/environments": ["libs/crm/environments/src/index.ts"],
      "@akva/crm/config": ["libs/crm/config/src/index.ts"],
      "@akva/crm/auth/util": ["libs/crm/auth/util/src/index.ts"],
      "@akva/crm/layout": ["libs/crm/layout/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
